h1 = Category.model_name.human
table
  thead
    tr
      th = Category.human_attribute_name :rank
      th = Category.human_attribute_name :name
      th = Category.human_attribute_name :updated_at
      th = Category.human_attribute_name :created_at
  tbody
    - @categories.each do |category|
      tr
        td = category.rank
        td = link_to category.name, category
        td = l category.updated_at
        td = l category.created_at

